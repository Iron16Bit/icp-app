<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".PopUpFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#26364E">

        <Button
            android:id="@+id/exit"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:text="x" />

        <TextView
            android:id="@+id/title"
            android:layout_margin="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c683fc"
            android:textSize="40sp"
            android:textStyle="bold"
            android:text="INFO:" />

        <RelativeLayout
            android:id="@+id/MainContainer"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/exit"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/subTitle1"
                android:scrollbars = "vertical"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="1. IMPORT SLIDES:" />

            <RelativeLayout
                android:id="@+id/Container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/subTitle1"
                android:background="#5a565c"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#182436">

                    <TextView
                        android:id="@+id/Text1"
                        android:scrollbars = "vertical"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/subTitle2"
                android:scrollbars = "vertical"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Container1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="2. IMPORT LANGUAGES:" />

            <RelativeLayout
                android:id="@+id/Container2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/subTitle2"
                android:background="#5a565c"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#182436">

                    <TextView
                        android:id="@+id/Text2"
                        android:scrollbars = "vertical"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/subTitle3"
                android:scrollbars = "vertical"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Container2"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="3. SHOW SLIDES:" />

            <RelativeLayout
                android:id="@+id/Container3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/subTitle3"
                android:background="#5a565c"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#182436">

                    <TextView
                        android:id="@+id/Text3"
                        android:scrollbars = "vertical"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/subTitle4"
                android:scrollbars = "vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Container3"
                android:textColor="#707afa"
                android:textSize="18sp"
                android:textStyle="italic|bold"
                android:text="NOTES:" />

            <RelativeLayout
                android:id="@+id/Container4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/subTitle4"
                android:background="#5a565c"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#182436">

                    <TextView
                        android:id="@+id/Text4"
                        android:scrollbars = "vertical"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>